      <h2><%= pluralize(found_item.errors.count, "error") %> prohibited this found_item from being saved:</h2>

      <ul>
      <% found_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :found_item_name %>
  </div>

