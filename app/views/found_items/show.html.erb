<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @found_item.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @found_item.description %>
</p>

<p>
  <strong>Picture:</strong> <br />
  <% if Rails.application.assets.resolve(@found_item.pic_url).present? %>
    <td><%= image_tag @found_item.pic_url %></td>
  <% else %>
    <td><%= @found_item.pic_url %></td>
  <% end %>
</p>

<%= link_to 'Edit', edit_found_item_path(@found_item) %> |
<%= link_to 'Back', found_items_path %>
